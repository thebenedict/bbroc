<div class="panel">
  <div class="profile">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, required: true, autofocus: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "New Password" %>
        <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm New Password" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>
  </div>
</div>
