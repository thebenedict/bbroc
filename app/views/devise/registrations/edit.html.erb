<div class="panel">
  <div class="profile">

    <h2>Hey, <%= " #{current_user.first_name} " %></h2>
    <div class="helpful-links">
      <%= link_to destroy_user_session_path, :method => :delete do %>
      <span>Sign out</span>
      <% end %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, label: false, placeholder: 'Email' %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: false, placeholder: 'New Password' %>
        <%= f.input :password_confirmation, required: false, label: false, placeholder: 'Confirm New Password' %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label: false, placeholder: 'Current Password' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>
    <p>Have any <a href="/pages/feedback">feedback</a> for us?</p>
  </div>
</div>
