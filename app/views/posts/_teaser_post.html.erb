<article class="post">
  <div class="item-image">
    <%= image_tag "apples_placeholder.jpg", alt: "apples" %>
  </div>
  <div class="headline">
    <h2><%= teaser_post.item %></h2>
    <div>
      <%= image_tag "broccoli-placeholder.png", alt: "placeholder avatar", class: "avatar" %>
    </div>
  </div>
  <div class="detail">
    <h3><i class="fa fa-map-marker"></i> at <%= teaser_post.vendor.name %></h3>
    <h3><i class="fa fa-clock-o"></i> <%= time_tag teaser_post.created_at, distance_of_time_in_words_to_now(teaser_post.created_at) + ' ago', pubdate: true %></h3>
  </div>
</article>
