<div class="toggle-container post"><a href="#" onclick="document.getElementById('inputImage').click()"><i class="fa fa-camera"></i> Add Post</a></div>
<div id="new-post" class="post hidden">
  <button class="close-share">
    <i class="fa fa-close"></i>
  </button>
      <canvas id="image"></canvas>

    <div class="image-controls">
      <button id="drag-mode">
        <i class="fa fa-arrows"></i>
      </button>
      <button id="rotate-left">
        <i class="fa fa-rotate-left"></i>
      </button>
      <button id="rotate-right">
        <span class="fa fa-rotate-right"></i>
      </button>
      <button id="zoom-in">
        <i class="fa fa-search-plus"></i>
      </button>
      <button id="zoom-out">
        <i class="fa fa-search-minus"></i>
      </button>
      <button id="retake-image" onclick="document.getElementById('inputImage').click()">
        <i class="fa fa-camera"></i>
      </button>
    </div>

  <%= simple_form_for(@new_post) do |f| %>
    <input type="file" id="inputImage" accept="image/*">
    <%= f.association :item, label: false, prompt: "What is this?"  %>
    <%= f.association :vendor,label: false, prompt: "Where are you?" %>
    <div class="form-actions">
      <%= f.button :submit, "Post" %>
    </div>
  <% end %>
</div>
