<a href="/"><i class="fa fa-close"></i></a>
<div id="new-post">
  <input id="inputImage" type="file">
  <%= simple_form_for(@post) do |f| %>
  <div id="the-real-new-post" class="post">
    <div id="take-image" class="camera button" onclick="document.getElementById('inputImage').click()">
      <span> Add Photo</span>
    </div>
    <div id="retake-image" class="camera hidden button" onclick="document.getElementById('inputImage').click()">
      <span> Retake Photo</span>
    </div>
    <div class="item-image hidden">
      <canvas id="canvas" width="305" height="229px"></canvas>
    </div>
    <div>
      <%= f.input :image, as: :hidden %>
      <%= f.input(:item, placeholder: "Item", label: false) %>
    </div>
    <div>
      <%= f.input :notes, label: false, placeholder: "Note" %>
      <%= f.input :price, label: false, placeholder: "Price" %>
      <%= f.input :unit, label: false, placeholder: "Unit" %>
    </div>
    <div class="detail">
      <%= f.association :vendor, label: false, prompt: "Location" %>
      <div class="form-actions">
        <%= f.button :submit, "Post", data: {disable_with: "Submitting..."} %>
      </div>
    </div>
  </div>
  <% end %>
</div>
