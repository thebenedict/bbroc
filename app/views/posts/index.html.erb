<div id="wrap">
  <div class="panel control">
    <div class="welcome">
      <h2>Your recent requests</h2>
      <ul>
        <%= render current_user.recent_requests %>
      </ul>
    </div>
    <div class="welcome">
      <h2>New request</h2>
      <%= simple_form_for @request do |f| %>
        <%= f.input :body, label: false, placeholder: "Enter an item" %>
        <%= f.submit 'Submit' %>
      <% end %>
    </div>
  </div>
  <div class="panel">
    <div class="fb-like" data-href="http://www.bestbroccoli.com" data-layout="standard" data-width="300" data-action="like" data-show-faces="true" data-share="true"></div>
  </div>
  <div class="panel divide">
    <hr>
    <span>
      <strong>Here's all of our recent finds</strong>
    </span>
  </div>
  <div class="panel feed">
    <%= render @posts %>
  </div>
  <div class="pagination">
    <%= link_to_next_page(@posts, 'See more', :remote => true) %>
  </div>
</div>
