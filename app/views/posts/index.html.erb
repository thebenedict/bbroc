<main id="middle" class="panel">
  <div id="sign-up" class="post">
    <h2>Start sharing today!</h2>
    <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "fb-sign-in" %>
    <span>or sign up using your <a href="#" id="email-signup">email address</a></span>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true, label:false, placeholder:'First Name' %>
        <%= f.input :last_name, required: true, label:false, placeholder:'Last Name' %>
        <%= f.input :email, required: true, label:false, placeholder:'Email' %>
        <%= f.input :password, required: true, label:false, placeholder:'Password' %>
        <%= f.input :password_confirmation, required: true, label:false, placeholder:'Repeat Password' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div> 
  
