<article class="post">
  <div class="post-image">
    <%= image_tag "apples_placeholder.jpg", alt: "apples" %>
  </div>
  <div class="post-text">
    <h3><i class="fa fa-map-marker"></i> at <%= post.vendor.name %></h3>
    <h3><i class="fa fa-clock-o"></i> <%= time_tag post.created_at, distance_of_time_in_words_to_now(post.created_at) + ' ago', pubdate: true %></h3>
    <h2><%= post.item.name %></h2>
  </div>
  <div class="post-user">
    <%= image_tag "broccoli-placeholder.png", alt: "placeholder avatar" %>
    
      <%= image_tag "icon.svg", alt: "broccoli points", class: "broccoli-point-icon" %><span class="point-count"><%= Random.rand(1..10) %></span>
    
  </div>
</article>